{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
     "ecmaFeatures": {
       "jsx": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "globals": {
    "request": true,
    "appRoot": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "strict": "off",
    "no-debugger": "off",
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-explicit-any": "off"
  }
}
