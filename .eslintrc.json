{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
     "ecmaFeatures": {
       "jsx": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "globals": {
    "request": true,
    "appRoot": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
  ],
  "rules": {
    "strict": "off",
    "no-debugger":"off"    
  }
}
